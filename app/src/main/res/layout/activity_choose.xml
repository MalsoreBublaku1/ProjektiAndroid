                    android:id="@+id/pyetja1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="First, let's narrow things down:"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="272dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"></Spinner>


                <View
                    android:id="@+id/vija1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/fillimi"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/pyetja2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="Now choose a property type:"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="272dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"></Spinner>


                <View
                    android:id="@+id/vija2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/fillimi"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />


                <TextView
                    android:id="@+id/pyetja3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="What will guests have:"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="272dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"></Spinner>

                <View
                    android:id="@+id/vija3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/fillimi"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/pyetja4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="How many bedrooms do you have?"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/spinner8"
                    android:layout_width="272dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"></Spinner>


                <View
                    android:id="@+id/vija5"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/rl1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"

                    android:background="@android:color/darker_gray" />


                <TextView
                    android:id="@+id/pyetja5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="Number of beds"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="272dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"></Spinner>


                <View
                    android:id="@+id/vija6"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/spinner3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />


                <TextView
                    android:id="@+id/pyetja6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="Number of guests"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/spinner4"
                    android:layout_width="272dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"></Spinner>


