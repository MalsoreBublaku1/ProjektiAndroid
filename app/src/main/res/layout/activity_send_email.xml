<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SendEmailActivity"
    android:padding="16dp">





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="35dp"
        android:layout_margin="20dp"
        android:background="@drawable/check_email_bg"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHECK YOUR EMAIL!"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/bardhe"/>
<TextView
    android:paddingTop="14dp"
    android:textSize="18dp"
    android:layout_width="match_parent"
    android:textColor="@color/bardhe"
    android:layout_height="wrap_content"
    android:text="We have sent you an email with a link to reset your password!"/>


    </LinearLayout>


</LinearLayout>
