        <!--android:layout_height="50dp"-->
        <!--android:id="@+id/header_id"-->
        <!--android:layout_alignParentTop="true"-->
        <!--&gt;-->

    <!--</RelativeLayout>-->
  <RelativeLayout
      android:layout_width="match_parent"
      android:background="#ffffff"
      android:layout_height="match_parent">

      <RelativeLayout
          android:layout_width="match_parent"
          android:id="@+id/header_id"
          android:background="#f2eded"
          android:layout_height="52dp">

          <EditText
              android:layout_width="350dp"

              android:layout_centerHorizontal="true"
              android:layout_height="50dp"
              android:layout_marginTop="1dp"
              android:hint=" Search"
              android:textColorHint="#7b7c7c"
              android:textSize="18dp"
              android:drawableTint="#7b7c7c"
              android:padding="10dp"
              android:background="@drawable/et_search"
              android:id="@+id/et_search"
              android:drawableLeft="@drawable/ic_search_black_24dp"
              android:drawablePadding="5dp"
              />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/ngjyra6"
              android:layout_below="@id/et_search"></LinearLayout>



      </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/header_id"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="#ffffff">


                <LinearLayout
                    android:id="@+id/mainLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <RelativeLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:id="@+id/btnDates"
                            android:background="@drawable/et_search"
                            android:text="Dates" />

                        <Button
                            android:id="@+id/btnGuests"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="25dp"
                            android:background="@drawable/et_search"
                            android:text="Guests" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"

                        android:text="Find the best places to sleep and eat!"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/firstPhoto"
                            android:layout_width="0dp"
                            android:background="@drawable/fotot_border"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:src="@mipmap/porta33" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HOMES"
                                android:textColor="@color/teksti"
                                android:layout_gravity="center"
                                android:textSize="15dp"/>




                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/secondPhoto"
                            android:orientation="vertical"
                            android:background="@drawable/fotot_border"
                            android:layout_width="0dp"


                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:src="@mipmap/restaurants" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RESTAURANTS"
                                android:textColor="@color/teksti"
                                android:layout_gravity="center"
                                android:textSize="15dp"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <FrameLayout
                    android:id="@+id/mainContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/mainLinear">

                </FrameLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
  </RelativeLayout>
</layout>